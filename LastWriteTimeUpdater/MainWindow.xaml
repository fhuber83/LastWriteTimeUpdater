<Window x:Class="LastWriteTimeUpdater.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LastWriteTimeUpdater"
        mc:Ignorable="d"
        Title="Last Write Time Updater" Height="200" Width="320" Topmost="True">
    <DockPanel>
        
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem x:Name="StatusBarItem1">Ready</StatusBarItem>
        </StatusBar>
        <Label HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" AllowDrop="True" PreviewDragOver="Label_PreviewDragOver" Drop="Label_Drop">Drop files here</Label>
    </DockPanel>
    
</Window>
